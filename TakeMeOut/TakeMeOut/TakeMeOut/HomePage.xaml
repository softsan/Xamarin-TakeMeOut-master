<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakeMeOut.HomePage"
              Title="Welcome">
  

  <ListView x:Name="MainListViewHome"
       HasUnevenRows="True"
            SeparatorVisibility="None" Margin="0,0,0,0">

   
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell >
          <StackLayout Orientation="Vertical" Spacing="0" BackgroundColor="Black">
            <Grid Grid.Row="1" Padding="0,0,0,0"
                          ColumnSpacing="0"
                          RowSpacing="0"
                  >

              <Image Aspect="AspectFill"
                HorizontalOptions="FillAndExpand"
                Source="{Binding ImageUrl}"
                    Margin="0,0,0,0"/>
                
               
            </Grid>

          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
  </ContentPage>
